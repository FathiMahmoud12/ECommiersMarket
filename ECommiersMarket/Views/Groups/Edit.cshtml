@model ECommiersMarket.Models.MainGroup

@{
    ViewBag.Title = "تعديل بيانات الفئات ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-control">
        <div class="form-horizontal">
            <h4>تعديل الفئات </h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.Label("إسم المجموعة ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
                </div>

            </div>
            <hr />
            <div class=" form-control  ">
                    <div class="col-9">
                        <div class="form-group">
                            @Html.Label("الصورة ", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-6">
                                @*@Html.EditorFor(model => model.pi_path, new { htmlAttributes = new { @class = "form-control" } })*@
                                <img src="@Model.pi_path" style="width:250px" alt="حدث مشكلة اثناء عرض الصورة " />
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />

                <div class="col-6">
                    <div class="form-group">
                        <input type="file" class="form-control" id="pi_path" name="pi_path" placeholder="صورة " required>

                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="mb-3">
                    <button class="btn btn-outline-success w-100 waves-effect waves-light" type="submit"> حفظ  </button>
                </div>
            </div>       
            <br />
            <div class="form-group">
                <div class="mb-3">
                    <a href="~/Groups/Index" class="btn btn-outline-danger w-100 waves-effect waves-light" type="submit"> الرجوع للقائمة   </a>
                </div>
            </div>

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
