@model IEnumerable<ECommiersMarket.Models.MainGroup>

@{
    ViewBag.Title = "إدارة الفئات ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p style="direction:ltr ">
    <a color:black;  class="btn btn-outline-success" href="~/AddGroups/Index">إضافة فئات جديدة </a></p>
<h2>إدارة الفئات </h2>



<div class="card-body">

    <table class="table table-bordered table-responsive table-hover " id="datatable" name="datatable">
        <thead>
            <tr>
                <th>م </th>
                <th>اسم الفئة </th>
                <th>الصورة </th>
                <th>العمليات  </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupName)
                    </td>
                    <td>
                        <img src="@item.pi_path" style="width:50px" alt="لا يمكن عرض الصورة " />

                    </td>



                    <td class="col-3">
                        <a class="btn btn-outline-secondary btn-sm edit" title="تعديل ">
                            @*<i class="fas fa-pencil-alt"></i>
                            *@
                            <i class="fa-solid fa-wand-magic-sparkles"></i>
                        </a>

                        <a href="/Cotigors/Delete/@item.Id" onclick="return deleteCheck(this);" class="btn btn-outline-danger btn-sm"><i class="fa-solid fa-trash fa-shake"></i></a>

                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>


