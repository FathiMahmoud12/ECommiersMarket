
@{
    ViewBag.Title = "تأكيد الطلب ";
    Layout = "~/Views/Shared/MarketLayout.cshtml";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>عربة التسوق</h4>
                    <div class="breadcrumb__links">
                        <a href="./index.html">لوحة التحكم </a>
                        <a href="./shop.html">المتجر </a>
                        <span>عربة التسوق</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>المنتج</th>
                                <th>الكمية</th>
                                <th>إجمالي</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @if (ViewBag.Cart != null)
                                {
                                    foreach (var item in ViewBag.Cart)
                                    {
                                        <td class="product__cart__item">
                                            <div class="product__cart__item__pic">
                                                <img  style="width:90px" src="@item.Image" alt="">
                                            </div>
                                            <div class="product__cart__item__text">
                                                <h6>@item.Name</h6>
                                                <h5> @item.Price</h5>
                                            </div>
                                        </td>
                                        <td class="quantity__item">
                                            <div class="quantity">
                                                <div class="pro-qty-2">
                                                    <input type="text" value="1">
                                                </div>
                                            </div>
                                        </td>
                                        <td class="cart__price"> @item.Price</td>
                                        <td class="cart__close"><i class="fa fa-close"></i></td>
                                    }
                                }
                            </tr>
                    
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a href="#">استكمال الشراء</a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn update__btn">
                            <a href="#"><i class="fa fa-spinner"></i>تحديث سلة المشتريات</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__discount">
                    <h6>كود الخصم</h6>
                    <form action="#">
                        <input type="text" placeholder="Coupon code">
                        <button type="submit">تفعيل</button>
                    </form>
                </div>
                <div class="cart__total">
                    <h6>إجمالي</h6>
                    <ul>

                        <li>الاجمالي  <span>ج.م @ViewBag.Sum</span></li>
                        <li>المبلغ النهائي <span>ج.م @ViewBag.Sum</span></li>
                    </ul>
                    <a href="/Shop/Save" class="primary-btn">إنهاء الشراء</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->
