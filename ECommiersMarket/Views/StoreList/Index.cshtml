@model IEnumerable<ECommiersMarket.Models.Store>

@{
    ViewBag.Title = "إدارة المخازن";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-body">
    <p style="direction:ltr ">
        <a color:black; class="btn btn-outline-success" href="~/AddStore/Index">إضافة مخزن جديد </a>
    </p>
    <h2>
        إدارة المخازن
    </h2>


    <table class="table table-bordered table-responsive table-hover " id="datatable" name="datatable">
        <thead>
            <tr>
                <th>م </th>
                <th>اسم المخزن </th>
                <th>العمليات  </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StorName)
                    </td>



                    <td class="col-3">
                        <a href="/StoreList/Edit/@item.Id" class="btn btn-outline-secondary btn-sm edit" title="تعديل ">
                            <i class="fa-solid fa-wand-magic-sparkles"></i>
                        </a>

                        <a href="/StoreList/Delete/@item.Id" onclick="return deleteCheck(this);" class="btn btn-outline-danger btn-sm"><i class="fa-solid fa-trash fa-shake"></i></a>

                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

